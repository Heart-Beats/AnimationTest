<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="5000">
    <!--旋转动画: 以左顶点为坐标, 从正90度到负90度, 持续5s -->
    <rotate android:fromDegrees="90"
        android:toDegrees="-90"
        android:pivotX="0%"
        android:pivotY="0%" />
</set>